<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text">
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" ><%= listing.description %></textarea>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]"class="form-control"  value="<%= listing.image %>" type="text">
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]"  class="form-control"value="<%= listing.price %>" type="number">
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">country</label>
          <input name="listing[country]" class="form-control" value="<%= listing.country %>" type="text">
        </div>
      </div>
      
      <div class="mb-3">
        <label for="location" class="form-label">location</label>
        <input name="listing[location]"  class="form-control" value="<%= listing.location %>" type="text">
      </div>
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>
</body>
